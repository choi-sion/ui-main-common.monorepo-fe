{
  "version": "0.0.0",
  "_id": "root@",
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=16.18.1",
    "yarn": ">=1.22.19"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "build": "lerna exec --parallel -- babel --root-mode upward src -d lib --ignore **/*.stories.js,**/*.spec.js",
    "coverage": "jest --coverage",
    "deploy-storybook": "storybook-to-ghpages",
    "lint:js": "eslint . --ext .js --ignore-pattern lib --ignore-pattern node_modules",
    "lint:styles": "stylelint './packages/**/*.js'",
    "lint": "yarn lint:js && yarn lint:styles",
    "now-build": "storybook build -c .storybook -o public",
    "prettier": "prettier --write \"**/*.{js,json,md,yml}\"",
    "lerna-publish": "lerna publish",
    "test": "yarn build && yarn lint && yarn coverage",
    "unit": "jest",
    "dev": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "chromatic --project-token CHROMATIC_PROJECT_TOKEN"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "eslint",
      "prettier --check"
    ],
    "**/*.{json,yaml,md}": [
      "prettier --check"
    ]
  },
  "devDependencies": {
    "@babel/cli": "7.11.6",
    "@babel/core": "7.11.6",
    "@babel/preset-env": "7.11.5",
    "@babel/preset-react": "7.10.4",
    "@storybook/addon-docs": "7.1.1",
    "@storybook/addon-essentials": "^7.1.1",
    "@storybook/addon-interactions": "^7.1.1",
    "@storybook/addon-links": "^7.1.1",
    "@storybook/addon-onboarding": "^1.0.8",
    "@storybook/addon-styling": "^1.3.5",
    "@storybook/blocks": "^7.1.1",
    "@storybook/preset-create-react-app": "7.1.1",
    "@storybook/react": "^7.1.1",
    "@storybook/react-vite": "^7.1.1",
    "@storybook/react-webpack5": "7.1.1",
    "@storybook/storybook-deployer": "2.8.16",
    "@storybook/testing-library": "^0.2.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "26.3.0",
    "babel-loader": "8.1.0",
    "babel-plugin-styled-components": "1.11.1",
    "chromatic": "^6.20.0",
    "eslint": "7.8.1",
    "eslint-config-get-off-my-lawn": "5.0.1",
    "eslint-plugin-storybook": "^0.6.13",
    "husky": "4.3.0",
    "jest": "26.4.2",
    "jest-haste-map": "26.3.0",
    "jest-resolve": "26.4.0",
    "jest-styled-components": "7.0.3",
    "lerna": "3.22.1",
    "lint-staged": "10.3.0",
    "prettier": "2.1.1",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-test-renderer": "16.13.1",
    "sass": "^1.64.2",
    "storybook": "7.1.1",
    "styled-components": "5.2.0",
    "stylelint": "13.7.0",
    "stylelint-config-get-off-my-lawn": "2.0.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-processor-styled-components": "1.10.0",
    "vite": "^4.0.0"
  }
}
